<div class="container-fluid">
<div class="row">
    <!-- Left Panel -->
    <div class="col-md-8 left-panel py-3">
        {{#if error}}
        <div class="alert alert-danger">
            {{message}}
        </div>
        {{/if}}
        <div class="card rounded-lg">
            <div class="card-header bg-fridge text-white text-center py-3">
                <h3>My friends</h3>
            </div>
            <ul class="list-group">
                {{#if friends.length}}
                    {{#each friends}}
                    <!-- this holds the users friends -->
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{this.first_name}} {{this.last_name}} ({{this.username}})

                            <form action="/friends/delete" method="POST">
                                <button class="btn btn-fridge" type="submit">Unfriend</button>
                                <input type="hidden" name="friend" value="{{this.username}}">
                            </form>                    
                        </li>
                    {{/each}}
                {{else}}
                    <li class="list-group-item text-center">
                        <h4 class="text-fridge-dark">
                            You don't have any friends yet
                        </h4>
                        <h4 class="text-fridge-dark">
                            Start adding some!
                        </h4>
                    </li>
                {{/if}}
            </ul>
        </div>
        <div class="card rounded-lg mt-2">
            <div class="card-header bg-fridge text-white text-center py-3">
                <h3>Search for more friends</h3>
            </div>
            <div class="card-body">
                <form action="/addfriend" method="POST">
                    <div class="row g-2"> 
                        <div class="col-10">
                            <input name="new_friend" class="form-control" placeholder="Type username" required>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-fridge w-100" type="submit">Add friend</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Right Panel -->
    <div class="col-md-4 right-panel py-3">
        <div class="card bg-fusion-light rounded-lg card-fusion">
            <div class="card-header bg-fusion text-white text-center py-3">
                <h3>Find recipes with friends</h3>
            </div>
            <div class="card-body p-4 d-flex justify-content-center">
                <a class="btn btn-danger text-fusion" href="/fuse">Fuse with Friends</a>               
            </div>
        </div>
    </div>
</div>
</div>