{{>message}}
<div class="container-fluid">
        <div class="row">
            <!-- Left Panel -->
            <div class="col-md-6 left-panel py-3">
                <div class="card rounded-lg">
                    <div class="card-header bg-fridge text-white text-center py-3">
                        <h3>My ingredients</h3>
                    </div>
                
                    <ul class="list-group">
                        {{#each ingredients}}
                        <!-- ingredients is a list holding each ingredient -->
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{this}}
                                <form action="/fridge/delete" method="POST">
                                    <button class="btn btn-fridge" type="submit">Remove</button>
                                    <input type="hidden" name="ingredient" value="{{this}}"></input>
                                </form>                    
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        
            <!-- Right Panel -->
            <div class="col-md-6 right-panel py-3">
                <div class="card rounded-lg">
                    <div class="card-header bg-fridge text-white text-center py-3">
                        <h3>Add more ingredients:</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/fridge/add" method="POST">
                            <input list="ingredientList" name="new_ingredient" class="form-control" placeholder="Start typing a new ingredient..." autocomplete="off">
                            <datalist id="ingredientList">
                                {{#each seen_ingreds}}
                                    <option value="{{this}}">
                                {{/each}}
                            </datalist>
                            <button class="btn btn-fridge mt-2" type="submit">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>